extends partial/layout

block site_title
    != page.category + " · "

block description
    - var desc = '分类：' + page.category + ' - ' + config.title;
    meta(name="description", content=desc)

block content
  .autopagerize_page_element: .content
    .category.animated.fadeInDown
      ul.list-with-title
        include mixins
        +postList()
        +make_pager(__('prev'), __('next'))
