extends partial/layout

block site_title
    != page.title + " Â· "

block description
    - var desc = page.desc || strip_html(page.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 150);
    meta(name="description", content=desc)

block content
  .autopagerize_page_element: .content: .post-page
    include mixins
    - if (page.path === 'tags/index.html')
      +make_tags(page)
    - else if (page.path === 'categories/index.html')
      +make_categories(page)
    - else
      +make_post(page, true)
    include partial/comments
